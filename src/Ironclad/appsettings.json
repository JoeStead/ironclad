{
  "urls": "http://*:5005;",
  "authority": "http://localhost:5005",
  "issuerUri": "http://ironclad.io",
  "respectXForwardedForHeaders": true,
  "serilog": {
    "minimumLevel": {
      "default": "Debug",
      "override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "writeTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "RollingFile",
              "Args": { "pathFormat": "logs/ironclad/ironclad-developer-{Date}.log" }
            }
          ]
        }
      }
    ]
  }
}